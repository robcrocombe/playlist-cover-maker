{
  "include": ["src/**/*"],
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "baseUrl": "."
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
