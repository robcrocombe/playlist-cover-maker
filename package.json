{
  "name": "playlist-cover-maker",
  "description": "Make playlist cover art with albums",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.x <23"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite build && vite preview",
    "dist": "tsx ./deploy.ts",
    "format": "prettier --write --check '**/*.{ts,tsx,js,jsx}'"
  },
  "source": "index.html",
  "type": "module",
  "license": "ISC",
  "author": "Rob Crocombe <me@robcrocombe.com> (http://robcrocombe.com)",
  "homepage": "https://github.com/robcrocombe/playlist-cover-maker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robcrocombe/playlist-cover-maker.git"
  },
  "bugs": {
    "url": "https://github.com/robcrocombe/playlist-cover-maker/issues"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "importOrderTypeScriptVersion": "5.0.0",
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ]
  },
  "dependencies": {
    "@spotify/web-api-ts-sdk": "1.2.0",
    "@types/node": "22.15.21",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/sortablejs": "1.15.8",
    "@vitejs/plugin-react": "4.5.0",
    "autoprefixer": "10.4.21",
    "axios": "1.9.0",
    "bulma": "1.0.4",
    "bulma-list": "3.0.0",
    "classnames": "2.5.1",
    "postcss": "8.5.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-helmet": "6.1.0",
    "react-sortablejs": "6.1.4",
    "sass-embedded": "1.89.0",
    "sortablejs": "1.15.6",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-checker": "0.9.3",
    "vite-plugin-csp-guard": "2.1.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "@types/gh-pages": "6.1.0",
    "gh-pages": "6.3.0",
    "prettier": "3.5.3",
    "tsx": "4.19.4",
    "vite-plugin-mkcert": "1.17.8",
    "yesno": "0.4.0"
  }
}
