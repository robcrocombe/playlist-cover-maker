{
  "name": "playlist-cover-art",
  "description": "Make playlist cover art with albums",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.x <23"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:prettier": "npm run prettier -- --log-level warn '**/*.{ts,tsx,js,jsx}'",
    "prettier": "prettier --write"
  },
  "source": "index.html",
  "license": "ISC",
  "author": "Rob Crocombe <me@robcrocombe.com> (http://robcrocombe.com)",
  "homepage": "https://github.com/robcrocombe/playlist-cover-art#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robcrocombe/playlist-cover-art.git"
  },
  "bugs": {
    "url": "https://github.com/robcrocombe/playlist-cover-art/issues"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "importOrderTypeScriptVersion": "5.0.0",
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ]
  },
  "dependencies": {
    "@spotify/web-api-ts-sdk": "1.2.0",
    "@types/node": "22.15.21",
    "@vitejs/plugin-react": "4.5.0",
    "autoprefixer": "10.4.21",
    "axios": "1.9.0",
    "bulma": "1.0.4",
    "bulma-list": "3.0.0",
    "classnames": "2.5.1",
    "postcss": "8.5.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-helmet": "6.1.0",
    "sass-embedded": "1.89.0",
    "typescript": "5.8.3",
    "vite": "6.3.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "prettier": "3.5.3",
    "vite-plugin-checker": "0.9.3"
  }
}
